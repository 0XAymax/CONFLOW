generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  email     String   @unique
  role      UserRole @default(USER)
  password  String
  affiliation String
  country   String
  isVerified Boolean @default(false)
  createdAt DateTime @default(now())
}